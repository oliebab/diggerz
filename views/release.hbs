<h1 id="release-title">{{release.releaseName}} <span id="by">by</span> {{release.artistName}}</h1>

<div id="release-wrapper">

    <div id="cover-container">
        <a href="{{release.discogsLink}}"><img class="release-cover" src="{{release.image}}" /></a>
        <br>
        {{#if isOwner}}
        <a href="/profile">Shared by : {{release.userId.userName}}</a>
        <br/>
        <a href="/profile/update/{{release._id}}" id="update-release">Update this release</a>
        <br>
        <a href="/profile/delete/{{release._id}}" id="delete-release">Delete this release</a>
        <br />
        {{else}}
        <a href="/profile/{{release.userId._id}}">Shared by : {{release.userId.userName}}</a>
        <br/>
        {{/if}}
    </div>

    <div class="release-infos-container">
        <span>Genre : {{release.releaseGenre}}</span>
        <br />
        <span>Label : {{release.labelName}}</span>
        <br />
        <span>Release date : {{release.releaseDate}}</span>
        <br />
        <span>Country : {{release.country}}</span>
        <p>Description : {{release.description}}</p>
        <br />
        <iframe width="560" height="315" src="{{release.youtubeLink}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <br />
    </div>

</div>